.icon-link
  width 48px
  height 48px
  display inline-block
  margin 6px 2px 0 0
  box-shadow 1px 1px 3px rgba(0,0,0,0.4)
  border-radius 10px

.github-link
  background url(../images/webicon-github.svg) left center no-repeat
  background-size 48px auto

.twitter-link
